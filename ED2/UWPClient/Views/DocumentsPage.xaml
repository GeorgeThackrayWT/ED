<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:grid="using:Telerik.UI.Xaml.Controls.Grid"
      x:Class="WT.UWP.ED2.Views.DocumentsPage"
      mc:Ignorable="d">
    <Grid Background="{StaticResource PageBackgroundBrush}">
        <grid:RadDataGrid
                    x:Name="DataGrid"
                    ItemsSource="{x:Bind Path=ViewModel.DocumentsList  }"
                    AutoGenerateColumns="False"

                            >

            <grid:RadDataGrid.Columns>
                <grid:DataGridTextColumn PropertyName="DocumentName"/>
                <grid:DataGridTextColumn PropertyName="Cabinet"/>
                <grid:DataGridTextColumn PropertyName="FileName"/>
                <grid:DataGridTextColumn PropertyName="ContentType"/>
                <grid:DataGridTextColumn PropertyName="Length"/>
                <grid:DataGridTextColumn PropertyName="Status"/>
                <grid:DataGridTextColumn PropertyName="ErrorMessage"/>
                <grid:DataGridTextColumn PropertyName="Date"/>
                <grid:DataGridTextColumn PropertyName="UserName"/>
            </grid:RadDataGrid.Columns>
        </grid:RadDataGrid>
    </Grid>
</Page>